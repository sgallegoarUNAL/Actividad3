package tercertaller.ejerciciorn7;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class EjercicioRN7 {

    public static void main(String[] args) {
        JFrame frame = new JFrame();
        frame.setSize(400, 300);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLayout(null);

        JLabel labelA = new JLabel("Ingrese el valor de A:");
        labelA.setBounds(20, 20, 150, 30);
        frame.add(labelA);

        JTextField textFieldA = new JTextField();
        textFieldA.setBounds(180, 20, 100, 30);
        frame.add(textFieldA);

        JLabel labelB = new JLabel("Ingrese el valor de B:");
        labelB.setBounds(20, 70, 150, 30);
        frame.add(labelB);

        JTextField textFieldB = new JTextField();
        textFieldB.setBounds(180, 70, 100, 30);
        frame.add(textFieldB);

        JButton compararButton = new JButton("Comparar");
        compararButton.setBounds(150, 120, 100, 30);
        frame.add(compararButton);

        JTextArea resultadoArea = new JTextArea();
        resultadoArea.setBounds(20, 160, 350, 80);
        resultadoArea.setEditable(false);
        frame.add(resultadoArea);

        compararButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    int A = Integer.parseInt(textFieldA.getText());
                    int B = Integer.parseInt(textFieldB.getText());

                    String resultado;
                    if (A > B) {
                        resultado = "A ES MAYOR QUE B";
                    } else if (A == B) {
                        resultado = "A ES IGUAL A B";
                    } else {
                        resultado = "A ES MENOR QUE B";
                    }

                    resultadoArea.setText(resultado);
                } catch (NumberFormatException ex) {
                    JOptionPane.showMessageDialog(frame, "Por favor, ingrese números válidos.", "Error", JOptionPane.ERROR_MESSAGE);
                }
            }
        });

        frame.setVisible(true);
    }
}
